body
{
	font-family: sans-serif;
	background: #17151f;
}

ul
{
	list-style-type: none;
	margin: 0;
	padding: 0;
	overflow: hidden;
	background: #201e2a;
}

label.logo
{
  color: white;
  font-weight: bold;
  float: left;
  display: block;
  text-align: center;
  padding: 14px 16px;
}

li
{
	float: left;
}

li a, .dropbtn
{
	display: inline-block;
	color: white;
	text-align: center;
	padding: 14px 16px;
	text-decoration: none;
}

li a:hover, .dropdown:hover .dropbtn
{
	background: firebrick;
}

li.dropdown
{
	display: inline-block;
}

li.dropdown a, .dropbtn
{
	color: white;
}


.dropdown-content
{
	display: none;
	position: absolute;
	background: #201e2a;
	min-width: 160px;
	box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2)
}

.dropdown-content a
{
	color: white;
	padding: 12px 16px;
	text-decoration: none;
	display: block;
	text-align: left;
}
.dropdown a:hover
{
	background: firebrick;
}

.dropdown:hover .dropdown-content
{
	display: block;
}

